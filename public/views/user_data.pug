extends basic_layout 

block content
    h3 Email: #{email}
    h3 First name: #{firstName}
    h3 Last name: #{lastName}
    h3 Image: 
    img(src='../../uploads/' + image, width='180px' height='180px')
    br
    form.col-6.w-25(action='/user-update')
        div.form-group
            button.col.btn.btn-primary.m-1(type='submit') UPDATE INFO
    form.col-6.w-25(method='DELETE' action='/user')
        div.form-group
            button.col.btn.btn-danger.m-1(type='submit') DELETE INFO